<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="900.0" style="-fx-background-color: linear-gradient(to bottom right, #F3E8FF, #FFFFFF);" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.untitled.controllers.ForgotPasswordController">
    
    <VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        
        <VBox maxWidth="450.0" spacing="24.0" style="-fx-background-color: white; -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 20, 0, 0, 4);">
            <padding>
                <Insets top="48.0" right="48.0" bottom="48.0" left="48.0"/>
            </padding>
            
            <VBox spacing="12.0">
                <Label text="ðŸ”‘" style="-fx-font-size: 40px;">
                    <VBox.margin>
                        <Insets bottom="8.0"/>
                    </VBox.margin>
                </Label>
                <Label text="Forgot Password?" styleClass="auth-title">
                    <font>
                        <Font name="System Bold" size="28.0"/>
                    </font>
                </Label>
                <Label text="No worries! Enter your email address and we'll send you a link to reset your password." textFill="#6B7280" wrapText="true">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
            </VBox>
            
            <VBox spacing="20.0">
                <VBox.margin>
                    <Insets top="8.0"/>
                </VBox.margin>
                
                <VBox spacing="8.0">
                    <HBox>
                        <Label text="Email Address" textFill="#374151">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </Label>
                        <Label text=" *" textFill="#EF4444">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </Label>
                    </HBox>
                    <TextField fx:id="emailField" promptText="Enter your email address" prefHeight="50.0">
                        <font>
                            <Font size="14.0"/>
                        </font>
                    </TextField>
                </VBox>
            </VBox>
            
            <Button fx:id="resetBtn" text="Send Reset Link" prefHeight="50.0" prefWidth="1000.0" styleClass="button" onAction="#onResetClick">
                <font>
                    <Font name="System Bold" size="16.0"/>
                </font>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
                <VBox.margin>
                    <Insets top="8.0"/>
                </VBox.margin>
            </Button>
            
            <HBox alignment="CENTER" spacing="4.0">
                <Label text="Remember your password?" textFill="#6B7280">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <Label fx:id="backToLoginLink" text="Back to Login" textFill="#8B5CF6" underline="true" onMouseClicked="#onBackToLoginClick" style="-fx-cursor: hand;">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
            </HBox>
        </VBox>
    </VBox>
    
</AnchorPane>

